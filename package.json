{
  "name": "convert-midi",
  "version": "0.1.0",
  "author": "hi2ma-bu4",
  "description": "A library to convert audio files (WAV) to MIDI data, usable in Node.js and browsers.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --clean",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch",
    "test": "vitest run"
  },
  "license": "Apache-2.0",
  "dependencies": {
    "@tonejs/midi": "^2.0.28",
    "pitchy": "^4.1.0",
    "wav-decoder": "^1.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wavefile": "^11.0.0"
  },
  "volta": {
    "node": "22.19.0",
    "npm": "11.6.0"
  }
}
